{
    "$schema": "http://json-schema.org/draft-07/schema",
    "definitions": {
        "service": {
            "type": "object",
            "properties": {
                "host": {
                    "$id": "#/properties/host",
                    "type": "string",
                    "title": "Service Host",
                    "description": "Host for service instance.",
                    "examples": [
                        "some.host.com"
                    ]
                },
                "port": {
                    "$id": "#/properties/port",
                    "type": "integer",
                    "title": "Service Port",
                    "description": "Port for service instance.",
                    "default": 443
                }
            }
        }
    }
}