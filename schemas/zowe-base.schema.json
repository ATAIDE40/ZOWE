{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "array",
    "title": "Base profiles",
    "description": "List of base profiles and their services",
    "id": "http://jsonschema.net",
    "items": {
        "type": "object",
        "patternProperties": {
            "^\\S+": {
                "title": "Base profile",
                "description": "Base profile and its configuration",
                "allOf": [
                    {
                        "$ref": "./definitions/service.definition.json#definitions/service"
                    },
                    {
                        "properties": {
                            "services": {
                                "$ref": "./definitions/services.definition.json#definitions/services"
                            }
                        }
                    }
                ]
            }
        }
    }
}