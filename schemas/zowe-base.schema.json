{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "id": "http://jsonschema.net",
    "items": {
        "type": "object",
        "defaultSnippets": [
            {
                "label": "Some label",
                "description": "Some desc",
                "body": {
                    "key": "$1"
                }
            }
        ],
        "patternProperties": {
            "^\\S+": {
                "allOf": [
                    {
                        "$ref": "./definitions/service.definition.json#definitions/service"
                    },
                    {
                        "properties": {
                            "services": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "zosmf": {
                                            "type": "array",
                                            "title": "z/OSMF Services",
                                            "items": {
                                                "type": "object",
                                                "title": "Services",
                                                "patternProperties": {
                                                    "^\\S+": {
                                                        "additionalProperties": false,
                                                        "$ref": "./definitions/service.definition.json#definitions/service"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                ]
            }
        }
    }
}