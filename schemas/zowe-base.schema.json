{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "array",
    "id": "http://jsonschema.net",
    "items": {
        "type": "object",
        "defaultSnippets": [
            {
                "label": "Some label",
                "description": "Some desc",
                "body": {
                    "key": "$1"
                }
            }
        ],
        "patternProperties": {
            "^\\S+": {
                "allOf": [
                    {
                        "$ref": "./definitions/service.definition.json#definitions/service"
                    },
                    {
                        "properties": {
                            "services": {
                                "$ref": "./definitions/services.definition.json#definitions/services"
                            }
                        }
                    }
                ]
            }
        }
    }
}